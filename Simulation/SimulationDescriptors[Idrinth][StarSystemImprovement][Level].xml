<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">
    <SimulationDescriptor Name="StarSystemImprovementLevel1" Type="StarSystemImprovementLevel" IsSerializable="false">
        <BinaryModifier TargetProperty="AntiVisionStrength"     Operation="Addition" Left="$(IsHiddenSystem)" BinaryOperation="Multiplication" Right="1"   Path="ClassColonizedStarSystem"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="StarSystemImprovementLevel2" Type="StarSystemImprovementLevel" IsSerializable="false">
        <Modifier TargetProperty="Quality"                      Operation="Addition"    Value="1"   Path="ClassColonizedStarSystem"  TooltipHidden="true" />
        <Modifier TargetProperty="SpaceportCapacity"            Operation="Addition"    Value="3"   Path="ClassColonizedStarSystem"/>
        <BinaryModifier TargetProperty="AntiVisionStrength"     Operation="Addition" Left="$(IsHiddenSystem)" BinaryOperation="Multiplication" Right="2"   Path="ClassColonizedStarSystem"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="StarSystemImprovementLevel3" Type="StarSystemImprovementLevel" IsSerializable="false">
        <Modifier TargetProperty="Quality"                      Operation="Addition"    Value="2"   Path="ClassColonizedStarSystem"  TooltipHidden="true" />
		<Modifier TargetProperty="SpaceportCapacity"            Operation="Addition"    Value="4"   Path="ClassColonizedStarSystem"/>
        <BinaryModifier TargetProperty="AntiVisionStrength"     Operation="Addition" Left="$(IsHiddenSystem)" BinaryOperation="Multiplication" Right="3"   Path="ClassColonizedStarSystem"/>
        <!-- Added -->
        <Modifier TargetProperty="MaximumSystemManpower"            Operation="Percent"    Value="0.05"   Path="ClassColonizedStarSystem"/>
        <Modifier TargetProperty="TradingRouteIncomeModifier"            Operation="Percent"    Value="0.05"   Path="ClassColonizedStarSystem"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="StarSystemImprovementLevel4" Type="StarSystemImprovementLevel" IsSerializable="false">
        <Modifier TargetProperty="Quality"                      Operation="Addition"    Value="3"   Path="ClassColonizedStarSystem"  TooltipHidden="true" />
		<Modifier TargetProperty="SpaceportCapacity"            Operation="Addition"    Value="5"   Path="ClassColonizedStarSystem"/>
        <BinaryModifier TargetProperty="AntiVisionStrength"     Operation="Addition" Left="$(IsHiddenSystem)" BinaryOperation="Multiplication" Right="3"   Path="ClassColonizedStarSystem"/>
        <!-- Added -->
        <Modifier TargetProperty="MaximumSystemManpower"            Operation="Percent"    Value="0.1"   Path="ClassColonizedStarSystem"/>
        <Modifier TargetProperty="TradingRouteIncomeModifier"            Operation="Percent"    Value="0.1"   Path="ClassColonizedStarSystem"/>
        <Modifier TargetProperty="NetSystemEmpirePoint"            Operation="Addition"    Value="1"   Path="ClassColonizedStarSystem"/>
        <Modifier TargetProperty="NetSystemMoney"            Operation="Addition"    Value="1"   Path="ClassColonizedStarSystem"/>
    </SimulationDescriptor>
</Datatable>